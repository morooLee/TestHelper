<Window x:Class="TestHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestHelper"
        xmlns:model="clr-namespace:TestHelper.Models"
        mc:Ignorable="d"
        Title="Moroo | TestHelper" Height="600" Width="900" Icon="Resources/Sign_Icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="22"></RowDefinition>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0" TabStripPlacement="Left">
            <TabItem Header="Inspection" ToolTip="점검">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="22"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Height="22" Width="22" ToolTip="새로고침" HorizontalAlignment="Right" Background="{x:Null}" BorderBrush="{x:Null}">
                            <Image Source="Resources/Refresh_grey.ico" />
                        </Button>
                        <Button Height="22" Width="22" ToolTip="설정" HorizontalAlignment="Right" Background="{x:Null}" BorderBrush="{x:Null}">
                            <Image Source="Resources/Settings.ico" />
                        </Button>
                    </StackPanel>
                    <Grid Grid.Row="1" >
                        <Grid.Resources>
                            <model:InspectionPageInfoList x:Key="InspectionPageInfoList" />
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="187"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <ListView Grid.Column="0" Name="InspectionPageInfoList_ListView" ItemsSource="{Binding Source={StaticResource InspectionPageInfoList}}" ScrollViewer.VerticalScrollBarVisibility="Visible">
                            <ListView.View>
                                <GridView AllowsColumnReorder="True">
                                    <GridViewColumn DisplayMemberBinding="{Binding Path=PageName}" Header="Page" Width="80" />
                                    <GridViewColumn DisplayMemberBinding="{Binding Path=InspectionDate}" Header="Date" Width="80" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="22"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Margin="10,0,0,0" VerticalAlignment="Center" Text="http://bulletin.nexon.com/nxk/service_checking.html" />
                            <WebBrowser Name="Inspection_WebBrowser" Grid.Row="1" Source="http://bulletin.nexon.com/nxk/service_checking.html" Loaded="WebBrowser_Loaded" />
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Appsn" ToolTip="게임코드(페이지코드)">

            </TabItem>
        </TabControl>
        <StatusBar Grid.Row="1" Name="statusBar" DockPanel.Dock="Bottom" VerticalAlignment="Bottom" />
    </Grid>
</Window>
